{
    "name": "mern-learn",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "build": "cd client && next build",
        "client": "cd client && node nextServer.js",
        "server": "cd server && nodemon server.js",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server_production": "cd server && cross-env NODE_ENV=production node server.js",
        "client_production": "cd client && cross-env NODE_ENV=production node nextServer.js",
        "production": "npm run build && concurrently \"npm run server_production\" \"npm run client_production\""
    },
    "author": "Neology92",
    "license": "",
    "dependencies": {
        "@material-ui/core": "^4.9.5",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "^4.0.0-alpha.45",
        "@svgr/webpack": "^5.2.0",
        "babel-plugin-styled-components": "^1.10.7",
        "bcrypt": "^4.0.1",
        "body-parser": "^1.19.0",
        "concurrently": "^5.1.0",
        "cross-env": "^7.0.2",
        "express": "^4.17.1",
        "http-errors": "^1.7.3",
        "http-proxy-middleware": "^1.0.1",
        "mongoose": "^5.9.3",
        "next": "^9.2.2",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "styled-components": "^5.0.1",
        "uuid": "^3.4.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-react": "^7.18.3",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "stylelint": "^13.2.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "stylelint-webpack-plugin": "^1.2.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": " env FORCE_COLOR=1 npx lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "stylelint",
            "prettier --config .prettierrc.json --write"
        ]
    }
